{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": false
  },
  "include": ["src/**/*", "data/**/*.json"],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "../types" }
  ]
}